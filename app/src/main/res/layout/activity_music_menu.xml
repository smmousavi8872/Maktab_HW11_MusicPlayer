<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/dark_background_color"
  android:orientation="vertical"
  tools:context=".mvc.controller.activities.MusicMenuActivity">


  <android.support.design.widget.TabLayout
    android:id="@+id/music_menu_tablayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/dark_background_color"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    app:tabIndicatorColor="@color/general_purple_color"
    app:tabSelectedTextColor="@color/general_purple_color"
    app:tabTextColor="#eee"
    tools:targetApi="lollipop">

    <android.support.design.widget.TabItem
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Left"/>

    <android.support.design.widget.TabItem
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Center"/>

    <android.support.design.widget.TabItem
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Right"/>


    <android.support.design.widget.TabItem
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Center"/>

  </android.support.design.widget.TabLayout>


</LinearLayout>